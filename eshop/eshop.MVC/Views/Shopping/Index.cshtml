@model ShoppingCardCollection
@{
    ViewData["Title"] = "Index";
}

<h1> Sepet....</h1>
@if (Model.CardItems.Count == 0)
{
    <div class="alert alert-info">Sepetinizde henüz ürün bulunmuyor.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ürün </th>
                <th></th>
                <th>Adet</th>
                <th>Ara Toplam</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CardItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td><img src="@item.Product.ImageUrl" class="img-fluid img-thumbnail" /></td>
                    <td>@item.Quantity</td>
                    <td>@(item.Quantity * item.Product.Price)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4">
                    Toplam Fiyat: @Model.TotalPrice() TL
                </td>
            </tr>
        </tfoot>
    </table>
}

